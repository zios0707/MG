{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"],
  "types": [
    "svelte",
    "svelte/store",
    "svelte/motion",
    "svelte/transition",
    "svelte/animate",
    "svelte/easing"
  ]

}